<%= form_for(user, url: user_links_path, method: :post) do |f| %>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.nested_fields_for :user_links,  wrapper_tag: :tr do |s| %>
      <td class="col-xs-1 text-center"><%= s.remove_nested_fields_link fa_icon "trash", class: 'btn btn-danger btn-circle', role: 'button' %></td>

      <td><%= s.select :type, UserLink.types_i18n.invert, {},class:"form-control" %></td>
      <td><%= s.text_field :link_url,class:"form-control" %></td>
    <% end %>
    <tfoot>
      <tr>
        <td colspan="3" align="left">
          <%= f.add_nested_fields_link :user_links, class: 'btn btn-success', role: 'button' do %>
            <%= fa_icon "plus" %> Add
          <% end %>
          <%= f.submit "submit" , class: 'btn btn-primary'%>
        </td>
      </tr>
    </tfoot>
  </table>

</div>
<% end %>